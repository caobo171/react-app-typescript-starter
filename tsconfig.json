{
  "compilerOptions": {
    "target": "es2018",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src",
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
